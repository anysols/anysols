{
    "name": "@plt4rm/cli",
    "version": "2.5.0",
    "description": "Sleek and powerful platform for faster and easier application development.",
    "main": "lib/app.js",
    "scripts": {
        "start": "node ./lib/app.js",
        "start-ts": "ts-node ./src/app.ts",
        "build": "gulp | tsc",
        "test": "nyc mocha --recursive",
        "coverage": "nyc report --reporter=text-lcov | coveralls",
        "local_install": "npm install -g .",
        "publish": "npm publish"
    },
    "nyc": {
        "check-coverage": false,
        "all": true,
        "extension": [
            ".js"
        ],
        "include": [
            "**/!(*.spec.*).js"
        ],
        "exclude": [
            "assets/",
            "docs/",
            "bin/",
            "**/gulpfile.js",
            "test/",
            "playground.js"
        ],
        "reporter": [
            "html",
            "lcov",
            "text",
            "text-summary"
        ],
        "report-dir": "docs/reports/coverage"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/anysols/anysols.git"
    },
    "bin": {
        "plt4rm": "./bin/anysols.js"
    },
    "author": "Shivaji Varma <contact@shivajivarma.com>",
    "contributors": [],
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://gitlab.com/anysols/anysols/issues"
    },
    "homepage": "https://anysols.com",
    "dependencies": {
        "@anysols/commons": "^0.1.2",
        "@anysols/core-service": "^1.2.0",
        "@anysols/server-service": "^1.2.3",
        "@anysols/user-management": "^0.2.6",
        "@anysols/security-service": "^0.2.6",
        "@anysols/platform": "^1.6.2",
        "@anysols/utils": "^0.6.6",
        "commander": "^2.16.0",
        "cron": "^1.3.0",
        "dotenv": "^5.0.1",
        "istanbul": "^0.4.5",
        "jsonwebtoken": "^8.5.1",
        "ejs": "^2.7.1"
    },
    "devDependencies": {
        "@anysols/odm": "^1.6.9",
        "@types/ejs": "^2.6.3",
        "chai": "^4.2.0",
        "del": "^5.1.0",
        "gulp": "^4.0.2",
        "mocha": "^6.2.0",
        "nyc": "^14.1.1",
        "typescript": "^3.6.2"
    }
}

<style>
    /* width */
    ::-webkit-scrollbar {
        width: 10px;
    }

    /* Track */
    ::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    /* Handle */
    ::-webkit-scrollbar-thumb {
        background: #888;
    }

    /* Handle on hover */
    ::-webkit-scrollbar-thumb:hover {
        background: #555;
    }

    header {
        position: fixed;
        padding-top: 5px;
        padding-bottom: 5px;
    }

    header.shadow {
        -webkit-box-shadow: 0 3px 5px rgba(57, 63, 72, 0.3);
        -moz-box-shadow: 0 3px 5px rgba(57, 63, 72, 0.3);
        box-shadow: 0 3px 5px rgba(57, 63, 72, 0.3);
    }

    header .title {
        margin-top: 3px;
    }

    main {
        padding-top: 50px;
    }
</style>
<script>
    $(document).ready(function () {
        let header = $('header');
        $(window).scroll(function (e) {
            if (header.offset().top !== 0) {
                if (!header.hasClass('shadow')) {
                    header.addClass('shadow');
                }
            } else {
                header.removeClass('shadow');
            }
        });
    });
</script>
<div class="list-page">
    <header class="container-fluid" style="background-color: #e3e3e3;">
        <div class="row">
            <div class="col-sm-6">
                <button class="btn btn-link btn-sm float-left"><i class="fas fa-bars"></i></button>
                <h1 class="h6 float-left title">
                    <%= table.name %>
                </h1>
            </div>
            <div class="col-sm-6">
                <div class="float-right">
                    <button class="btn btn-link btn-sm"><i class="fas fa-angle-double-left"></i></button>
                    <button class="btn btn-link btn-sm"><i class="fas fa-angle-left"></i></button>
                    <button class="btn btn-link btn-sm"><i class="fas fa-angle-right"></i></button>
                    <button class="btn btn-link btn-sm"><i class="fas fa-angle-double-right"></i></button>
                </div>
            </div>
        </div>
    </header>
    <main>
        <table class="table table-condensed">
            <thead>
            <tr>
                <% cols.forEach(function(col){ %>
                <th><%=col%></th>
                <%});%>
            </tr>
            </thead>
            <tbody>
            <%data.forEach(function(item){%>
            <tr>
                <%cols.forEach(function(col){%>
                <td><%=item[col]%></td>
                <%});%>
            </tr>
            <%});%>
            </tbody>
        </table>
    </main>
</div>

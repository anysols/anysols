{
    "name": "Anysols - Platform for Business applications",
    "loggerLevel": "info",
    "services": [
        {
            "name": "core",
            "config": {
                "host": "localhost",
                "port": "27017",
                "database": "anysols",
                "dialect": "mongodb"
            }
        },
        {
            "name": "server",
            "config": {
                "port": 8080,
                "assets": "assets",
                "pages": {
                    "404": "views/404.ejs",
                    "500": "views/500.ejs"
                }
            }
        },  {
            "name": "userManagement"
        }, {
            "name": "security",
            "config": {
                "cookieName": "x-auth-token",
                "cookieSecret": "anysolsindia",
                "tokenExpiration": 86400000,
                "loginPage": "views/login.ejs"
            }
        }
    ]
}

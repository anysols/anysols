{
    "name": "Anysols - Platform for Business applications",
    "loggerLevel": "info",
    "services": [
        {
            "name": "core",
            "config": {
                "host": "localhost",
                "port": "27017",
                "database": "anysols",
                "dialect": "mongodb"
            }
        },
        {
            "name": "server",
            "config": {
                "port": 8080,
                "assetsPath": "assets",
                "viewsPath": "views",
                "pages": {
                    "404": "404",
                    "500": "500"
                }
            }
        },  {
            "name": "userManagement"
        }, {
            "name": "security",
            "config": {
                "cookieName": "x-auth-token",
                "cookieSecret": "anysolsindia",
                "tokenExpiration": 86400000,
                "loginPage": "login"
            }
        }
    ]
}
